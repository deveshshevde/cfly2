<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/setupDesc" android:background="@drawable/mode_desc_rectangle" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/setup_fm_side_desc" style="@style/ModeDetailText"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <Button android:id="@+id/buttonCancel" android:background="@drawable/button_blue" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/button_setup_cancel" style="@style/modeControl"/>
        <Button android:id="@+id/buttonSend" android:background="@drawable/button_green_drawable" android:layout_height="wrap_content" android:text="@string/button_setup_send" style="@style/modeControl"/>
    </LinearLayout>
</LinearLayout>
