<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/RelativeLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
    <SurfaceView android:id="@+id/surface" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentLeft="false" android:layout_alignParentTop="false" android:layout_centerInParent="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/image_onRecord" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_horizontal_margin" android:layout_marginTop="@dimen/activity_vertical_margin" android:src="@drawable/rec_spot" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <RelativeLayout android:orientation="vertical" android:id="@+id/layout_left" android:background="#80145c61" android:layout_width="60dp" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
        <Button android:id="@+id/button_mode_switch" android:background="@drawable/mode_changeto_still" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
        <Button android:id="@+id/button_MovieEV" android:background="@drawable/ev_off" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/button_mode_switch"/>
        <Button android:id="@+id/button_menu" android:background="@drawable/setup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_horizontal_margin" android:layout_below="@+id/button_MovieEV"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="vertical" android:id="@+id/layout_right" android:background="#80145c61" android:layout_width="60dp" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <Button android:id="@+id/button_album" android:background="@drawable/pbk" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
        <Button android:id="@+id/button_record" android:background="@drawable/shutter_rec_start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/button_album"/>
        <Button android:id="@+id/button_pic_on_record" android:background="@drawable/shutter_capture_instill_lock" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_horizontal_margin" android:layout_below="@+id/button_record"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="vertical" android:id="@+id/photo_layout_right" android:background="#80145c61" android:layout_width="60dp" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <Button android:id="@+id/button_photo_album" android:background="@drawable/pbk" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_horizontal_margin"/>
        <Button android:id="@+id/button_capture" android:background="@drawable/shutter_still" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/activity_horizontal_margin" android:layout_below="@+id/button_photo_album"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/layout_top" android:background="#80145c61" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_centerInParent="true">
        <TextView android:textSize="@dimen/activity_vertical_margin" android:id="@+id/textView_top_resolution" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_vertical_margin" android:layout_marginTop="@dimen/activity_vertical_margin" android:text="Resolution" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/activity_vertical_margin" android:id="@+id/textView_top_max_record_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_vertical_margin" android:layout_marginTop="@dimen/activity_vertical_margin" android:text="max_record_time" android:layout_toRightOf="@+id/textView_top_resolution" android:layout_alignBaseline="@+id/textView_top_resolution" android:layout_alignParentTop="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/imageView_battery" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_vertical_margin" android:layout_marginTop="@dimen/activity_vertical_margin" android:layout_toRightOf="@+id/textView_top_max_record_time" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <SeekBar android:id="@+id/seekBar_MovieEV" android:layout_width="200dp" android:layout_height="wrap_content" android:max="12" android:layout_weight="1" android:layout_toRightOf="@+id/layout_left" android:layout_centerVertical="true"/>
    <RelativeLayout android:id="@+id/layout_blank" android:background="#ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ProgressBar android:id="@+id/loading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:layout_centerInParent="true"/>
</RelativeLayout>
