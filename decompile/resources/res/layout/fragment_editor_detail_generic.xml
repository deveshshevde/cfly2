<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" style="@style/missionItemDetailLayout">
    <com.xeagle.android.widgets.spinners.SpinnerSelfSelect android:entries="@array/ExampleWaypointType" android:id="@+id/spinnerWaypointType" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_alignParentTop="true"/>
    <TextView android:gravity="center_vertical" android:id="@+id/WaypointType" android:background="@drawable/wp_title_rectangle" android:paddingLeft="25dp" android:paddingRight="25dp" android:layout_width="match_parent" android:layout_height="64dp" android:text="Select Waypoint Type" android:layout_alignParentTop="true" android:layout_centerVertical="true" android:textAllCaps="true" style="@style/missionHeaderTitle"/>
    <ImageView android:id="@+id/menuHint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:src="@drawable/ic_menu_hint" android:layout_alignBottom="@+id/WaypointType" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView android:background="@drawable/mode_desc_rectangle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Click on the spinner to select a type for the selected waypoints." android:layout_below="@+id/WaypointType" style="@style/ModeDetailText"/>
</RelativeLayout>
