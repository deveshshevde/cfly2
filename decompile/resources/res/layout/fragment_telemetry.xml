<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/transparentLayout">
    <RelativeLayout android:layout_gravity="center_horizontal" android:paddingLeft="1dp" android:paddingTop="1dp" android:paddingRight="1dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/yawValueText" android:background="@drawable/round_rect_bg" android:focusable="true" android:layout_width="55dp" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="@string/default_angle_value" android:drawableLeft="@drawable/yaw_icon" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" style="@style/RPYtextLabels"/>
        <TextView android:textSize="16sp" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/pitchValueText" android:background="@drawable/round_rect_bg" android:layout_width="55dp" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="@string/default_angle_value" android:drawableLeft="@drawable/pitch_icon" android:drawablePadding="2dp" android:layout_below="@+id/yawValueText" android:layout_alignLeft="@+id/yawValueText" android:layout_alignStart="@+id/yawValueText" style="@style/RPYtextLabels"/>
        <TextView android:textSize="16sp" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/rollValueText" android:background="@drawable/round_rect_bg" android:layout_width="55dp" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="@string/default_angle_value" android:drawableLeft="@drawable/roll_icon" android:drawablePadding="2dp" android:layout_below="@+id/pitchValueText" android:layout_alignLeft="@+id/pitchValueText" android:layout_alignStart="@+id/pitchValueText" style="@style/RPYtextLabels"/>
        <com.xeagle.android.widgets.AttitudeIndicator android:id="@+id/aiView" android:background="@drawable/round_rect_bg" android:layout_width="80dp" android:layout_height="80dp" android:layout_toRightOf="@+id/yawValueText" android:layout_alignTop="@+id/yawValueText" android:layout_alignBottom="@+id/rollValueText"/>
        <RelativeLayout android:id="@+id/ground_speed_layout" android:background="@drawable/ground_speed_bg" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:baselineAligned="true" android:layout_below="@+id/rollValueText" android:layout_alignLeft="@+id/rollValueText" android:layout_alignRight="@+id/aiView">
            <TextView android:id="@+id/groundSpeedValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/telemetry_default_value" android:layout_centerHorizontal="true" style="@style/largeTelemetryText"/>
            <TextView android:textColor="@color/ground_speed_units" android:id="@+id/groundSpeedUnits" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/speed_unit" android:layout_toRightOf="@+id/groundSpeedValue" android:layout_alignBaseline="@+id/groundSpeedValue" style="@style/unitText"/>
            <TextView android:textColor="@color/ground_speed_label" android:id="@+id/groundSpeedLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ground_speed_label" android:layout_below="@+id/groundSpeedValue" android:layout_alignParentLeft="true" style="@style/textLabels"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/air_speed_layout" android:background="@drawable/air_speed_bg" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:baselineAligned="true" android:layout_below="@+id/ground_speed_layout" android:layout_alignLeft="@+id/rollValueText" android:layout_alignRight="@+id/aiView">
            <TextView android:id="@+id/airSpeedValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/telemetry_default_value" android:layout_centerHorizontal="true" style="@style/largeTelemetryText"/>
            <TextView android:textColor="@color/air_speed_units" android:id="@+id/airSpeedUnits" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/speed_unit" android:layout_toRightOf="@+id/airSpeedValue" android:layout_alignBaseline="@+id/airSpeedValue" style="@style/unitText"/>
            <TextView android:textColor="@color/air_speed_label" android:id="@+id/airSpeedLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/air_speed_label" android:layout_below="@+id/airSpeedValue" android:layout_alignParentLeft="true" style="@style/textLabels"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/climb_rate_layout" android:background="@drawable/climb_rate_bg" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:baselineAligned="true" android:layout_below="@+id/air_speed_layout" android:layout_alignLeft="@+id/rollValueText" android:layout_alignRight="@+id/aiView">
            <TextView android:id="@+id/climbRateValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/telemetry_default_value" android:layout_centerHorizontal="true" style="@style/largeTelemetryText"/>
            <TextView android:textColor="@color/air_speed_units" android:id="@+id/climbRateUnits" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/speed_unit" android:layout_toRightOf="@+id/climbRateValue" android:layout_alignBaseline="@+id/climbRateValue" style="@style/unitText"/>
            <TextView android:textColor="@color/climb_rate_label" android:id="@+id/climbRateLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/climb_rate_label" android:layout_below="@+id/climbRateValue" android:layout_alignParentLeft="true" style="@style/textLabels"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/alt_layout" android:background="@drawable/alt_change_bg" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="true" android:layout_below="@+id/climb_rate_layout" android:layout_alignLeft="@+id/rollValueText" android:layout_alignRight="@+id/aiView">
            <TextView android:textColor="@color/altitude_target" android:id="@+id/targetAltitudeValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/telemetry_default_value" android:layout_centerHorizontal="true" style="@style/largeTelemetryText"/>
            <TextView android:textColor="@color/altitude_target" android:id="@+id/targetAltitudeUnits" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/meter_unit" android:layout_toRightOf="@+id/targetAltitudeValue" android:layout_alignBaseline="@+id/targetAltitudeValue" style="@style/unitText"/>
            <TextView android:id="@+id/altitudeValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/telemetry_default_value" android:layout_below="@+id/targetAltitudeValue" android:layout_alignLeft="@+id/targetAltitudeValue" style="@style/largeTelemetryText"/>
            <TextView android:id="@+id/altitudeUnits" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/meter_unit" android:layout_toRightOf="@+id/altitudeValue" android:layout_alignBaseline="@+id/altitudeValue" style="@style/unitText"/>
            <TextView android:textColor="@color/altitude_label" android:id="@+id/AltitudeLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/altitude_label" android:layout_below="@+id/altitudeValue" android:layout_alignParentLeft="true" style="@style/textLabels"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
