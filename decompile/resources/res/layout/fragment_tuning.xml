<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/configLayout">
    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="@integer/tuning_graph_weight">
        <org.droidplanner.android.widgets.graph.Chart android:id="@+id/chartBottom" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/chartTop" android:layout_alignParentBottom="true"/>
        <org.droidplanner.android.widgets.graph.Chart android:id="@+id/chartTop" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignBottom="@+id/firstDivider" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <View android:id="@+id/firstDivider" android:background="#3f9bbf" android:layout_width="match_parent" android:layout_height="3dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/titleBottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Large Text" android:layout_alignTop="@+id/chartBottom" android:layout_alignParentLeft="true"/>
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/titleTop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Roll:" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <RelativeLayout android:background="@color/opaque_white" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="@integer/tuning_params_weight">
        <com.flypro.android.widgets.spinners.SpinnerSelfSelect android:entries="@array/ExampleWaypointType" android:id="@+id/spinnerWaypointType" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_alignParentTop="true"/>
        <TextView android:gravity="center" android:id="@+id/title_rect" android:background="@drawable/wp_title_rectangle" android:layout_width="match_parent" android:layout_height="@dimen/tuning_mission_header_title_height" android:text="ROLL / PITCH" android:layout_alignParentTop="true" style="@style/missionHeaderTitle"/>
        <ImageView android:id="@+id/menuHint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:src="@drawable/ic_menu_hint" android:layout_alignBottom="@+id/title_rect" android:layout_alignParentRight="true"/>
        <TextView android:id="@+id/textView1" android:background="@drawable/mode_desc_rectangle" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tune_roll" android:layout_below="@+id/title_rect" style="@style/ModeDetailText"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/tuning_button_bar" android:layout_below="@+id/textView1">
            <LinearLayout android:orientation="vertical" android:id="@+id/tunningSeekBars" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <org.droidplanner.android.widgets.NumberFieldEdit.NumberFieldEdit android:textSize="@dimen/tuning_edit_number_text_size" android:id="@+id/numberFieldEdit1" android:layout_width="match_parent" android:layout_height="wrap_content" app:FastInc="0.5" app:Format="%2.4f" app:Inc="0.1" app:Max="100" app:Min="0" app:Separator=":" app:Title="Stab. P" app:buttonHeight="@dimen/tuning_edit_number_button_height" app:buttonWidth="@dimen/tuning_edit_number_button_width"/>
                <org.droidplanner.android.widgets.NumberFieldEdit.NumberFieldEdit android:textSize="@dimen/tuning_edit_number_text_size" android:id="@+id/numberFieldEdit2" android:layout_width="match_parent" android:layout_height="wrap_content" app:Separator=":" app:Title="Rate P" app:buttonHeight="@dimen/tuning_edit_number_button_height" app:buttonWidth="@dimen/tuning_edit_number_button_width"/>
                <org.droidplanner.android.widgets.NumberFieldEdit.NumberFieldEdit android:textSize="@dimen/tuning_edit_number_text_size" android:id="@+id/numberFieldEdit3" android:layout_width="match_parent" android:layout_height="wrap_content" app:Separator=":" app:Title="Rate I" app:buttonHeight="@dimen/tuning_edit_number_button_height" app:buttonWidth="@dimen/tuning_edit_number_button_width"/>
                <org.droidplanner.android.widgets.NumberFieldEdit.NumberFieldEdit android:textSize="@dimen/tuning_edit_number_text_size" android:id="@+id/numberFieldEdit4" android:layout_width="match_parent" android:layout_height="wrap_content" app:Separator=":" app:Title="Rate D" app:buttonHeight="@dimen/tuning_edit_number_button_height" app:buttonWidth="@dimen/tuning_edit_number_button_width"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/tuning_button_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_alignParentBottom="true">
            <Button android:id="@+id/backgroundMissionItem" android:background="@drawable/button_blue" android:layout_width="@dimen/setup_action_button_width" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:text="@string/button_setup_reset" style="@style/modeControl"/>
            <Button android:id="@+id/button2" android:background="@drawable/button_green_drawable" android:layout_width="@dimen/setup_action_button_width" android:layout_height="wrap_content" android:text="@string/button_setup_send" style="@style/modeControl"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
