<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="@dimen/dp_42">
        <com.xeagle.android.vjoystick.IWidgets.IImageButton android:id="@+id/menu_open_parameters" android:background="@color/transparency" android:layout_width="@dimen/dp_30" android:layout_height="@dimen/dp_30" android:src="@drawable/ic_action_folder_open" android:layout_marginEnd="@dimen/dp_10" android:layout_alignParentEnd="true"/>
        <com.xeagle.android.vjoystick.IWidgets.IImageButton android:id="@+id/menu_filter_params" android:background="@color/transparency" android:layout_width="@dimen/dp_30" android:layout_height="@dimen/dp_30" android:src="@android:drawable/ic_menu_search" android:layout_marginEnd="@dimen/dp_10" android:layout_toStartOf="@+id/menu_open_parameters"/>
        <com.xeagle.android.vjoystick.IWidgets.IImageButton android:id="@+id/menu_save_parameters" android:background="@color/transparency" android:layout_width="@dimen/dp_30" android:layout_height="@dimen/dp_30" android:src="@drawable/ic_action_save" android:layout_marginEnd="@dimen/dp_10" android:layout_toStartOf="@+id/menu_filter_params"/>
        <com.xeagle.android.vjoystick.IWidgets.IImageButton android:id="@+id/menu_write_parameters" android:background="@color/transparency" android:layout_width="@dimen/dp_30" android:layout_height="@dimen/dp_30" android:src="@drawable/ic_action_upload" android:layout_marginEnd="@dimen/dp_10" android:layout_toStartOf="@+id/menu_save_parameters"/>
        <com.xeagle.android.vjoystick.IWidgets.IImageButton android:id="@+id/menu_load_parameters" android:background="@color/transparency" android:layout_width="@dimen/dp_30" android:layout_height="@dimen/dp_30" android:src="@drawable/ic_action_reload" android:layout_marginEnd="@dimen/dp_10" android:layout_toStartOf="@+id/menu_write_parameters"/>
    </RelativeLayout>
    <ProgressBar android:id="@+id/reload_progress" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:indeterminate="true" style="@style/Widget.Holo.Light.ProgressBar.Horizontal"/>
    <EditText android:id="@+id/parameter_filter" android:background="@drawable/bg_cell_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:drawableLeft="@android:drawable/ic_menu_search" android:imeOptions="actionSearch" android:textIsSelectable="true" android:drawableStart="@android:drawable/ic_menu_search"/>
    <ListView android:id="@android:id/list" android:descendantFocusability="beforeDescendants" android:layout_width="match_parent" android:layout_height="match_parent" android:dividerHeight="0dp"/>
    <TextView android:textAppearance="@style/paramsClickToRefresh" android:gravity="center" android:id="@android:id/empty" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/params_click_to_refresh"/>
</LinearLayout>
