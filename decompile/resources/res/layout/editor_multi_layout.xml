    <com.xeagle.android.vjoystick.IWidgets.IImageButton android:id="@+id/ib_editor_controller" android:background="@color/transparency" android:padding="@dimen/dp_5" android:layout_width="@dimen/dp_30" android:layout_height="@dimen/dp_30" android:layout_marginTop="@dimen/dp_10" android:src="@drawable/editor_video_pause" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
