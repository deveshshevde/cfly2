        <com.xeagle.android.vjoystick.IWidgets.IImageButton android:id="@+id/ib_editor_music" android:background="@color/transparency" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@drawable/editor_music_nor" android:layout_weight="1"/>
        <com.xeagle.android.vjoystick.IWidgets.IImageButton android:id="@+id/ib_editor_filter" android:background="@color/transparency" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@drawable/editor_filter_nor" android:layout_weight="1"/>
        <com.xeagle.android.vjoystick.IWidgets.IImageButton android:id="@+id/ib_editor_text" android:background="@color/transparency" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@drawable/editor_text_nor" android:layout_weight="1"/>
    </LinearLayout>
