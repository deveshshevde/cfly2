<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_gravity="center_horizontal" android:background="@drawable/bg_cell_white" android:paddingLeft="1dp" android:paddingTop="1dp" android:paddingRight="1dp" android:paddingBottom="1dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/speed_rl" android:layout_width="wrap_content" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/yawValueText" android:background="@drawable/round_rect_bg" android:focusable="true" android:layout_width="80dp" android:layout_height="35dp" android:layout_marginBottom="2dp" android:text="@string/default_angle_value" android:drawableLeft="@drawable/yaw_icon" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" style="@style/RPYtextLabels"/>
            <TextView android:textSize="16sp" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/pitchValueText" android:background="@drawable/round_rect_bg" android:layout_width="80dp" android:layout_height="35dp" android:layout_marginBottom="2dp" android:text="@string/default_angle_value" android:drawableLeft="@drawable/pitch_icon" android:drawablePadding="2dp" android:layout_below="@+id/yawValueText" android:layout_alignLeft="@+id/yawValueText" android:layout_alignStart="@+id/yawValueText" style="@style/RPYtextLabels"/>
            <TextView android:textSize="16sp" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/rollValueText" android:background="@drawable/round_rect_bg" android:layout_width="80dp" android:layout_height="35dp" android:layout_marginBottom="2dp" android:text="@string/default_angle_value" android:drawableLeft="@drawable/roll_icon" android:drawablePadding="2dp" android:layout_below="@+id/pitchValueText" android:layout_alignLeft="@+id/pitchValueText" android:layout_alignStart="@+id/pitchValueText" style="@style/RPYtextLabels"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/ground_speed_layout" android:background="@drawable/ground_speed_bg" android:layout_width="wrap_content" android:layout_height="60dp" android:baselineAligned="true" android:layout_toRightOf="@+id/aiView">
            <LinearLayout android:orientation="horizontal" android:id="@+id/speed_ll" android:layout_width="match_parent" android:layout_height="30dp">
                <TextView android:layout_gravity="center" android:id="@+id/groundSpeedValue" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/telemetry_default_value" android:layout_weight="3" style="@style/largeTelemetryText"/>
                <TextView android:textColor="@color/ground_speed_units" android:layout_gravity="center" android:id="@+id/groundSpeedUnits" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/speed_unit" android:layout_weight="2" style="@style/unitText"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/ground_speed_label" android:id="@+id/groundSpeedLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ground_speed_label" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" style="@style/textLabels"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/air_speed_layout" android:background="@drawable/air_speed_bg" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="60dp" android:baselineAligned="true" android:layout_toRightOf="@+id/aiView" android:layout_below="@+id/ground_speed_layout">
            <LinearLayout android:orientation="horizontal" android:id="@+id/air_ll" android:layout_width="match_parent" android:layout_height="30dp">
                <TextView android:layout_gravity="center" android:id="@+id/airSpeedValue" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/telemetry_default_value" android:layout_weight="3" style="@style/largeTelemetryText"/>
                <TextView android:textColor="@color/air_speed_units" android:layout_gravity="center" android:id="@+id/airSpeedUnits" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/speed_unit" android:layout_weight="2" style="@style/unitText"/>
            </LinearLayout>
            <TextView android:textColor="@color/air_speed_label" android:id="@+id/airSpeedLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/air_speed_label" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" style="@style/textLabels"/>
        </RelativeLayout>
        <com.xeagle.android.widgets.AttitudeIndicator android:id="@+id/aiView" android:background="@drawable/round_rect_bg" android:layout_width="160dp" android:layout_height="180dp" android:layout_toRightOf="@+id/speed_rl" android:layout_alignTop="@+id/ground_speed_layout"/>
        <RelativeLayout android:id="@+id/alt_layout" android:background="@drawable/alt_change_bg" android:paddingLeft="20dp" android:paddingRight="10dp" android:layout_width="80dp" android:layout_height="68dp" android:baselineAligned="true" android:layout_alignLeft="@+id/speed_rl" android:layout_alignBottom="@+id/aiView">
            <TextView android:textColor="@color/altitude_target" android:id="@+id/targetAltitudeValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/telemetry_default_value" android:layout_centerHorizontal="true" style="@style/largeTelemetryText"/>
            <TextView android:textColor="@color/altitude_target" android:id="@+id/targetAltitudeUnits" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/meter_unit" android:layout_toRightOf="@+id/targetAltitudeValue" android:layout_alignBaseline="@+id/targetAltitudeValue" style="@style/unitText"/>
            <TextView android:id="@+id/altitudeValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/telemetry_default_value" android:layout_below="@+id/targetAltitudeValue" android:layout_alignLeft="@+id/targetAltitudeValue" style="@style/largeTelemetryText"/>
            <TextView android:id="@+id/altitudeUnits" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/meter_unit" android:layout_toRightOf="@+id/altitudeValue" android:layout_alignBaseline="@+id/altitudeValue" style="@style/unitText"/>
            <TextView android:textColor="@color/altitude_label" android:id="@+id/AltitudeLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/altitude_label" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" style="@style/textLabels"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/climb_rate_layout" android:background="@drawable/climb_rate_bg" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="60dp" android:baselineAligned="true" android:layout_toRightOf="@+id/aiView" android:layout_alignBottom="@+id/aiView">
            <LinearLayout android:orientation="horizontal" android:id="@+id/climb_ll" android:layout_width="match_parent" android:layout_height="30dp">
                <TextView android:layout_gravity="center" android:id="@+id/climbRateValue" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/telemetry_default_value" android:layout_weight="3" style="@style/largeTelemetryText"/>
                <TextView android:textColor="@color/air_speed_units" android:layout_gravity="center" android:id="@+id/climbRateUnits" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/speed_unit" android:layout_weight="2" style="@style/unitText"/>
            </LinearLayout>
            <TextView android:textColor="@color/climb_rate_label" android:id="@+id/climbRateLabel" android:layout_width="100dp" android:layout_height="wrap_content" android:text="@string/climb_rate_label" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" style="@style/textLabels"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
